<idea-plugin>
    <id>com.forntoh.androidprojecttemplates</id>
    <name>Android Project Templates</name>
    <vendor>Forntoh</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.forntoh.androidprojecttemplates">
        <applicationService serviceImplementation="com.forntoh.androidprojecttemplates.services.MyApplicationService"/>
        <projectService serviceImplementation="com.forntoh.androidprojecttemplates.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.forntoh.androidprojecttemplates.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
